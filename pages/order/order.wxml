<!--pages/order/order.wxml-->
<view class="page">
<mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
<mp-form>
  <mp-cells>
    <!--
    <mp-cell prop="date" title="日期" ext-class="">
      <picker data-field="date" mode="date" value="{{date}}" start="2020-01-01" end="2020-12-31" bindchange="bindDateChange">
        <view class="weui-input">{{date}}</view>
      </picker>
    </mp-cell>
    -->
    <mp-cell prop="type" title="类型" ext-class="">
      <picker mode="selector" bindchange="bindTypeChange" value="{{typeIndex}}" range="{{types}}" range-key="category">
        <view class="weui-input">{{types[typeIndex].category}}</view>
      </picker>
    </mp-cell>
    <mp-cell prop="tips" title="备注" ext-class="">
      <input bindinput="tipsInputChange" class="weui-input" maxlength="15" value="{{tips}}" placeholder="请输入备注（最大15字）"/>
    </mp-cell>
    <mp-cell prop="money" title="金额" ext-class="">
      <input type="digit" bindinput="moneyInputChange" class="weui-input" value="{{money}}" placeholder="请输入金额（单位：元）"/>
    </mp-cell>
  </mp-cells>
  <view class="weui-btn-area">
    <button class="weui-btn" type="primary" bindtap="submitForm">添加</button>
    <button class="weui-btn" bindtap="cancle">取消</button>
  </view>
  <mp-dialog title="添加" show="{{showAdd}}" bindbuttontap="clickAdd" buttons="{{buttons}}">
    <view>确定添加么？</view>
  </mp-dialog>
</mp-form>
</view>